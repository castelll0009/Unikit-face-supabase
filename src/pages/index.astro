---
import Layout from "../layouts/layout.astro"
import Base from "../layouts/Base.astro"
import LogoCAD from "../components/logo-CAD.astro";
import Branding from "../components/CADD/Branding.astro";
// import Supabase from "../icons/Supabase.astro";
// import AstroIcon from "../icons/AstroIcon.astro";
export const prerender = true;
const title = "Bienvenido a Unikit";
---

<Layout title={title}>
  <section class="section  pt-20 text-secondary dark:text-white" style="min-height: 100vh; ">
    <main class="flex-1 flex flex-col gap-4 items-center p-4 justify-center">
      <h1 class="text-2xl sm:text-4xl font-bold text-center">{title}</h1>
      <ul class="flex gap-6 items-center font-bold text-2xl mt-6">
        <li
          class="dark:bg-zinc-800 bg-[#0D4185] border-t dark:border-zinc-700 h-20 w-20 border-transparent rounded-lg shadow dark:shadow-none flex items-center justify-center"
          style="background: #0D4185 ;"
        >
          <!-- <AstroIcon /> -->
          <img
          class="w-16"
           src="https://simca.unicauca.edu.co/simca/resources/images/logo.png" alt="">
        </li>
         &plus;
        <li
          class="dark:bg-[#0d4185] bg-[white] border-t dark:border-zinc-700 h-20 w-20 border-transparent rounded-lg shadow  flex items-center justify-center"
        >
        <div class="" style="padding: 200px; margin: 20px">          
          <!-- <LogoCAD  theme_text="" font="1px" ></LogoCAD> -->
          <Branding
          brandingColor={"cyan"}
          themeColor="currentColor"
          w="60px"
      />
        </div>
         
        </li>
      </ul>
      <p class="mt-6 max-w-prose">Herramienta para los estudiantes de la universidad del Cauca</p>
      <a
        href="https://github.com/kevinzunigacuellar/astro-supabase"
        class="font-mono max-w-prose underline underline-offset-2 hover:text-blue-700 text-blue-600 dark:text-blue-500 dark:hover:text-blue-400 "
        >Source code on GitHub</a
      >
    </main>
  </section>


</Layout>
